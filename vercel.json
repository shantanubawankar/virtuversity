{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "client/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://virtuversity.onrender.com/api/:path*" },
    { "source": "/", "destination": "/client/index.html" },
    { "source": "/login", "destination": "/client/login.html" },
    { "source": "/profile", "destination": "/client/profile.html" },
    { "source": "/video", "destination": "/client/video.html" },
    { "source": "/payments", "destination": "/client/payments.html" },
    { "source": "/courses", "destination": "/client/courses.html" },
    { "source": "/courses/:id", "destination": "/client/course.html" },
    { "source": "/teachers", "destination": "/client/teachers.html" },
    { "source": "/my-courses", "destination": "/client/my-courses.html" }
  ]
}
